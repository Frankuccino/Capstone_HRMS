<% layout('/layouts/boilerplate') %>

<div>
    <h3 class="my-3 page-header">Leave Request Form</h3>
</div>

<form action="/leaves" method="POST" novalidate class="validated-form">
    <div class="w-50 mx-2 border rounded-3 shadow" style="font-size: 0.8em;">
        <div class="mx-3">
            <h4 class="text-success my-2">Leave Information</h4>
        </div>
        <div class="w-80 m-3">
            <label for="employeeId" class="form-label ">Employee ID: </label>
            <input type="text" name="employee[employeeId]" id="employeeId" class="form-control">

            <label for="firstName" class="form-label mt-2 ">First Name: </label>
            <input type="text" name="employee[firstName]" id="firstName" class="form-control" disabled>

            <label for="lastName" class="form-label mt-2">Last Name: </label>
            <input type="text" name="employee[lastName]" id="lastName" class="form-control" disabled>

            <div class="d-flex align-items-center mt-3">
                <div class="me-2">
                    <label for="leaveStart" class="form-label">Start: </label>
                <input type="date" name="leaveStart" id="leaveStart" class="form-control">
                </div>
                <div class="me-2">
                    <label for="leaveEnd" class="form-label">End: </label>
                    <input type="date" name="leaveEnd" id="leaveEnd" class="form-control">
                </div>
                <div>
                    <label for="leaveType" class="form-label">Leave Type: </label>
                    <select name="leaveType" id="leaveType" class="form-control align-middle w-100">
                        <option value="" class="text-muted" selected>Select</option>
                        <option value="" class="text-muted">Sick Leave</option>
                        <option value="" class="text-muted">Vacation Leave</option>
                    </select>
                </div>
            </div>
            <div class="my-3">
                <label for="firstName" class="form-label ">Notes / Remarks: </label>
                <textarea cols="50" rows="5" name="employee[employeeId]" id="firstName" class="form-control" style="resize:none">
            </textarea>
            </div>
            <div class="my-3 d-flex justify-content-center">
                <button class="btn btn-success mx-3 w-30">
                    Submit
                </button>
                <a href="/leave-management" class="btn btn-danger">Back</a>
            </div>
        </div>
    </div>
</form>