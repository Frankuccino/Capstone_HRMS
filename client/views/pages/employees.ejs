<% layout('/layouts/boilerplate') %>

<div class="my-3">
    <h3 class="page-header mt-4 ms-3">Employees</h3>
</div>

<a href="/employees/form">Add Employee</a>


<section class="row m-auto">
    <div class="col-10">
        <table class="table table-striped border rounded-3">
            <thead>
                <tr>
                    <th class="text-success" style="width:15%;">Employee ID</th>
                    <th class="text-success" style="width:15%;">First Name</th>
                    <th class="text-success" style="width:15%;">last Name</th>
                    <th class="text-success" style="width:10%;">Role</th>
                    <th class="text-success" style="width:20%;">Department</th>
                    <th class="text-success" style="width:20%;"></th>        
                </tr>
            </thead>
            <tbody>
                <% for(let employee of employees) { %>
                <tr>
                    <td class="align-middle"><%=employee.employeeId  %></td>
                    <td class="align-middle" style="font-size:0.9em;"><%=employee.firstName  %></td>
                    <td class="align-middle" style="font-size:0.9em;"><%=employee.lastName  %></td>
                    <td class="align-middle" style="font-size:0.9em;"><%=employee.position %></td>
                    <td class="align-middle" style="font-size:0.9em;"><%=employee.office  %></td>
                    <td>
                        <a href="/employees/<%=employee._id %>"><button class="btn btn-primary p-1" style="font-size:0.9em;">View</button></a>
                        <a href="/employees/<%= employee._id %>/update-employee-form"><button class="btn btn-success p-1" style="font-size:0.9em;">Edit</button></a>
                     <button class="btn btn-danger p-1 ms-2" style="font-size:0.9em;" data-bs-toggle="modal" data-bs-target="#deactivateModal">Deactivate</button>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    
        <div class="modal fade" id="deactivateModal" tabindex="-1" role="dialog" aria-labelledby="deactivateConfirm" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header bg-danger">
                        <h5 class="modal-title text-light" id="deactivateConfirm">Confirm Deactivation</h5>
                    </div>
                    <div class="modal-body text-center fs-5">
                    Deactivate "Sample Name"?
                    </div>
                    <div class="modal-body text-center">
                        <form action="">
                            <label for="confirmId" name="confirmId">Please enter the Employee ID to be deactivated:</label>
                            <input type="text" name="confirmId" placeholder="-Employee ID-" class="text-center mt-2 rounded-3">
                    </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-danger">Deactivate</button>
                        </div>
                        </form>
                    </div>
            </div>
        </div>
    </div>
    <div class="col-2 card shadow">
        <h4 class="card-head mt-2 ms-1">Tools</h4>
    </div>
</section>


